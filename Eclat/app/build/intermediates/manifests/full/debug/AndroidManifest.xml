<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="fbla.hhs.eclat"
    android:versionCode="1"
    android:versionName="1.0" >

    <uses-sdk
        android:minSdkVersion="14"
        android:targetSdkVersion="23" />

    <uses-permission android:name="android.permission.INTERNET" />
    <uses-permission android:name="android.permission.ACCESS_NETWORK_STATE" />
    <!-- Camera for use -->
    <uses-permission android:name="android.permission.CAMERA" />

    <uses-feature android:name="android.hardware.camera" />
    <uses-feature android:name="android.hardware.camera.autofocus" />

    <application
        android:allowBackup="true"
        android:icon="@drawable/icon"
        android:label="@string/app_name"
        android:supportsRtl="true"
        android:theme="@style/AppTheme" >
        <activity android:name="fbla.hhs.eclat.StartUp" >
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name="fbla.hhs.eclat.MainActivity"
            android:theme="@style/AppTheme.NoActionBar" >
        </activity>
        <activity
            android:name="fbla.hhs.eclat.Login"
            android:theme="@style/AppTheme.NoActionBar" >
        </activity>
        <activity
            android:name="fbla.hhs.eclat.Signup"
            android:theme="@style/AppTheme.NoActionBar" >
        </activity>
        <activity
            android:name="fbla.hhs.eclat.ForgotCred"
            android:theme="@style/AppTheme.NoActionBar" >
        </activity>
        <activity
            android:name="fbla.hhs.eclat.NavDrawer"
            android:label="@string/title_activity_nav_drawer"
            android:theme="@style/AppTheme.NoActionBar" >
        </activity>
        <activity
            android:name="fbla.hhs.eclat.SettingsScreen"
            android:theme="@style/AppTheme.NoActionBar" >
        </activity>
        <activity
            android:name="fbla.hhs.eclat.Help"
            android:theme="@style/AppTheme.NoActionBar" >
        </activity>
        <activity
            android:name="fbla.hhs.eclat.Profile"
            android:theme="@style/AppTheme.NoActionBar" >
        </activity>
    </application>

</manifest>